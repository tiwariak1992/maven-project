pipeline
{
    agent any
    stages
    {
        stage('scm checkout')
        {
            steps
            {
                git 'https://github.com/tiwariak1992/maven-project.git'
            }
        }
        stage('clean package')
        {
            steps
            {
                sh label: '', script: 'mvn clean package'
            }
        }
        stage('build your docker image')
        {
            steps
            {
                sh 'docker build -t tiwariak1992/my-app:01'
            }
        }
    }
}
